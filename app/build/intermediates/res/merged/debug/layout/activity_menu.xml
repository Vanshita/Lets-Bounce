<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background_new" >

    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="MENU"
            android:textStyle="bold"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="153dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Sound Settings"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/on"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:onClick="turnSoundOffOn"
            android:text="on" />

        <RadioButton
            android:id="@+id/off"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="100dp"
            android:onClick="turnSoundOffOn"
            android:text="off" />
    </RadioGroup>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp">
        <Button
            android:id="@+id/retryFromMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/buttonshape_new"
            android:shadowColor="#6A6EA8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="goToTitleScreen"
            android:textSize="20dp"
            android:text="New Game" />



    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape_new"
        android:shadowColor="#6A6EA8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:onClick="goToTitleScreen"
         android:text="Home" />
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="28dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/textView5" />

        <ImageView
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_alignTop="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:layout_marginLeft="14dp" />

        <TextView
            android:text="to resume the game."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:textSize="20dp"
            android:id="@+id/textView6"
            android:textStyle="bold"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2" />
    </RelativeLayout>

</LinearLayout>
